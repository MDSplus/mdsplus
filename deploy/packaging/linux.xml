        if ( ${py} -c exit\(\) &gt;/dev/null 2&gt;&amp;1 )
        then
          ${py} -m compileall -q -f $RPM_INSTALL_PREFIX/mdsplus/python &gt;/dev/null 2&gt;&amp;1
