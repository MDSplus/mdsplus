#@(#)$RCSfile$ $Revision$
# @configure_input@
SHELL=/bin/sh

JAVA_APS = javamds \
	   javascope \
           javatraverser \
	   javaclient

D3D_PACKAGE = d3dshr

PARTS = \
        mdsshr \
        treeshr \
        tdishr \
        tditest \
        xmdsshr \
        mdstcpip \
        dwscope \
        mitdevices \
        mdslibidl \
        remcam \
        cdu     \
        mdsdcl  \
        ccl     \
        cts     \
	servershr \
        tcl \
        tdic \
        traverser \
        actions \
        mdslib \
        math \
        wfevent \
        setevent \
	rpm \
        manpages \
        @D3D_PACKAGE@ \
        @JAVA_APS@ \
        @IDLSQL@ \
	@IDLMDSEVENT@ \
	@MDSVME@

all:
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  echo Making $${dir}; cd $${dir}; make all; cd $$cdir;\
	done

.IGNORE:

clean:
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  cd $${dir} && make -i clean; cd $$cdir;\
	done

full_clean:
	make clean
	@ ./devscripts/rm_if bin
	@ ./devscripts/rm_if etc
	@ ./devscripts/rm_if lib
	@ ./devscripts/rm_if java/classes
	@ ./devscripts/rm_if java
	@ ./devscripts/rm_if uid
	@ ./devscripts/rm_if config.cache
	@ ./devscripts/rm_if config.log
	@ ./devscripts/rm_if `find . -name '*.in' | \
	      grep -v configure.in | grep -v makekit.in | \
	      awk '{print substr($$1,0,length($$1)-3)}'`

depend:
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  cd $${dir}; make depend > /dev/null 2> /dev/null; cd $$cdir;\
	done

MISC_PARTS = tdi idl trees setup.sh setup.csh java LabView include rpm

install: 
	mkdirhier @exec_prefix@/local/tdi
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  cd $${dir}; make install; cd $$cdir;\
	done
	tar cf - @TAR_EXCLUDE@ CVS $(MISC_PARTS) | (cd @exec_prefix@; tar xf -)
	(cd @exec_prefix@; chmod -R 755 $(MISC_PARTS))

BINARIES = bin etc lib uid \
           tdi idl trees envsyms \
           setup.sh setup.csh java LabView \
           include/ipdesc.h include/mdslib.inc

CLIENT_BINARIES = include/ipdesc.h include/mdslib.inc lib/libMdsIpShr.* lib/libMdsLib*.* idl

binaries :
	tar cvf - $(BINARIES) | compress -c - > ../binaries/MDSplus.`uname`.tar.Z
	tar cvf - $(CLIENT_BINARIES) | compress -c - > ../binaries/MDSplus.`uname`.client.tar.Z


