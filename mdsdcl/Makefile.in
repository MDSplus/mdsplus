SHELL=/bin/sh
CC=@CC@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ @LIBPTHREAD@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = 		\
mdsdcl_dcl_parse.c		\
mdsdcl_do_command.c	\
mdsdcl_dummy.c		\
mdsdcl_general.c		\
mdsdcl_get_input.c		\
mdsdcl_initialize.c	\
mdsdcl_insert_symbols.c	\
mdsdcl_tables.c		\
mdsdcl_macros.c		\
mdsdcl_set_command.c	\
mdsdcl_show_vm.c        \
mdsdcl_spawn.c		\
mdsdcl_wait.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = mdsdclshr.export

all:	@MAKELIBDIR@ @MAKEBINDIR@ @MAKELIBDIR@libMdsdcl.a  @MAKELIBDIR@libMdsdcl@SHARETYPE@ @MAKEBINDIR@mdsdcl

clean:
	@ $(RM) $(OBJECTS) mdsdcl.o
	@ $(RM) so_locations
	@ $(RM) mdsdcl_tables.c
	@ $(RM) @MAKELIBDIR@libMdsdcl.a
	@ $(RM) @MAKELIBDIR@libMdsdcl@SHARETYPE@
	@ $(RM) @MAKEBINDIR@mdsdcl

depend: 
	 @makedepend -- $(CFLAGS) -- $(SOURCES) mdsdcl.c

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKELIBDIR@libMdsdcl@SHARETYPE@ @libdir@
	$(INSTALL) -m 755  @MAKEBINDIR@mdsdcl	@bindir@

mdsdcl_tables.c:	mdsdcl_tables.ocld
	env @LIBPATH@=@MAKELIBDIR@ @MAKEBINDIR@cdu < mdsdcl_tables.ocld

@MAKELIBDIR@libMdsdcl.a:	$(OBJECTS)
		$(AR) -cr $@ $(OBJECTS)
		@RANLIB@ $@

@MAKELIBDIR@libMdsdcl@SHARETYPE@:	$(OBJECTS)
	$(LD)  -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ -lCdu -lMdsShr  $(LIBS)

@MAKEBINDIR@mdsdcl:	mdsdcl.o
	$(CC) $(CFLAGS) -o $@ mdsdcl.o -L@MAKELIBDIR@ -lMdsdcl -lCdu -lMdsShr
