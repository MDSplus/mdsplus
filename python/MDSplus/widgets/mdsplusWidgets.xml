<glade-catalog name="MDSplus.widgets"  library="gladepython" domain="glade-3" depends="gtk+">
 <init-function>glade_python_init</init-function>
    <glade-widget-classes>
        <glade-widget-class
            title="MDSplus Expression Field"
            name="MDSplusExprFieldWidget"
            xxxadaptor="MDSplusExprFieldWidgetAdaptor"
            generic-name="entry">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
              <property save="True" query="False" id="text" default="" name="Label" visible="False">
                   <spec>glade_standard_string_spec</spec>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus Expression"
            name="MDSplusExprWidget"
            xxxadaptor="MDSplusExprWidgetAdaptor"
            generic-name="textview">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus Path"
            name="MDSplusPathWidget"
            xxxadaptor="MDSplusPathWidgetAdaptor"
            generic-name="label">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device. Not necessary if widget name matches device part name.</tooltip>
              </property>
              <property save="True" query="False" id="useFullPath" default="False" name="useFullPath">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, use full path name otherwise use minimum path name.</tooltip>
              </property>
              <property save="True" query="False" id="label" default="" name="Label" visible="False">
                   <spec>glade_standard_string_spec</spec>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus OnOffWidget"
            name="MDSplusOnOffWidget"
            xxxadaptor="MDSplusOnOffWidgetAdaptor"
            icon-name="checkbox.png"
            generic-name="checkbutton">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
              <property save="True" query="False" id="showPath" default="False" name="showPath">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, the path of the node will be displayed with the checkbox</tooltip>
              </property>
              <property save="True" query="False" id="label" default="" name="Label" visible="False">
                   <spec>glade_standard_string_spec</spec>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus NidOptionWidget"
            name="MDSplusNidOptionWidget"
            xxxadaptor="MDSplusNidOptionWidgetAdaptor"
            generic-name="comboboxentry">
            <properties>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property translatable="True" id="values" name="values">
                   <spec>glade_standard_strv_spec</spec>
                   <tooltip>The value expressions to match the menu items.</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus OnOffXdBox Widget"
            name="MDSplusOnOffXdBoxWidget"
            xxxadaptor="MDSplusOnOffXdBoxWidgetAdaptor"
            generic-name="checkbutton">
            <properties>
              <property save="False" query="False" id="size" default="3" visible="False" name="Number of items">
                   <spec>glade_standard_int_spec</spec>
              </property>
              <property save="False" query="False" id="homogeneous" default="False" visible="False" name="Homogeneous">
                   <spec>glade_standard_boolean_spec</spec>
              </property>
               <property save="False" query="False" id="spacing" default="20" visible="False" name="Spacing">
                   <spec>glade_standard_int_spec</spec>
              </property>
             <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="buttonLabel" default="Label" name="buttonLabel">
                   <spec>glade_standard_string_spec</spec>
                   <tooltip>The label on the button.</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus XdBox Button Widget"
            name="MDSplusXdBoxButtonWidget"
            xxxadaptor="MDSplusXdBoxButtonWidgetAdaptor"
            generic-name="button">
            <properties>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus Digitizer Channels Widget"
            name="MDSplusDigChansWidget"
            xxxadaptor="MDSplusDigChansWidgetAdaptor"
            generic-name="table">
            <properties>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
              <property save="True" query="False" id="nidOffset" default="-1" optional="True" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="numChannels" default="8" name="Number of Channels">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The number of channels in the device.</tooltip>
              </property>
               <property save="True" query="False" id="nodesPerChannel" default="3" name="Nodes Per Channel">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The number of nodes per channel.</tooltip>
              </property>
               <property save="True" query="False" id="dataNidOffset" default="1" name="dataNidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a channel to the data node.</tooltip>
              </property>
              <property save="True" query="False" id="startIdxNidOffset" default="2" name="startIdxNidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a channel to the startIdx node.</tooltip>
              </property>
              <property save="True" query="False" id="endIdxNidOffset" default="3" name="endIdxNidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a channel to the endIdx ndoe.</tooltip>
              </property>
               <property save="True" query="False" id="incNidOffset" default="-1" optional="True" name="incNidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a channel to the increment node.</tooltip>
              </property>
         </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus Ok Buttons"
            name="MDSplusOkButtons"
            generic-name="hbuttonbox">
            <properties>
              <property save="False" query="False" id="size" default="3" visible="False" name="Number of items">
                   <spec>glade_standard_int_spec</spec>
               </property>
              <property save="False" query="False" id="homogeneous" default="False" visible="False" name="Homogeneous">
                   <spec>glade_standard_boolean_spec</spec>
              </property>
            </properties>
        </glade-widget-class>
    </glade-widget-classes>
    <glade-widget-group name="MDSplus Widgets"
        title="MDSplus Widgets">
        <glade-widget-class-ref name="MDSplusOkButtons"/>
        <glade-widget-class-ref name="MDSplusOnOffWidget"/>
        <glade-widget-class-ref name="MDSplusExprFieldWidget"/>
        <glade-widget-class-ref name="MDSplusExprWidget"/>
        <glade-widget-class-ref name="MDSplusPathWidget"/>
        <glade-widget-class-ref name="MDSplusNidOptionWidget"/>
        <glade-widget-class-ref name="MDSplusOnOffXdBoxWidget"/>
        <glade-widget-class-ref name="MDSplusXdBoxButtonWidget"/>
        <glade-widget-class-ref name="MDSplusDigChansWidget"/>
    </glade-widget-group>
</glade-catalog>
