#!/bin/sh
#
# file: load.acq
#
# unpack /bigffs/mdsacqkit.tgz into /ffs/user
# move the scripts to /usr/local/bin
# append acq_inetd.conf to /etc/inetd
#
cd /ffs/user
tar -xzf /bigffs/mdsacqkit.tgz
mv xmlfunctions.sh doInit.sh get.State sendFile acq.ao.zero unpack_waves unpack_d_waves /usr/local/bin
ln -s /usr/local/bin/unpack_waves /ffs/unpack_waves
ln -s /usr/local/bin/unpack_d_waves /ffs/unpack_d_waves
cat acq_inetd.conf >> /etc/inetd.conf
rm -f acq_inetd.conf
mkdir -p /etc/postshot.d
