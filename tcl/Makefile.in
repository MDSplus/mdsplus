SHELL=/bin/sh
CC=@CC@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ 
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = 			\
	mds_dsc_string.c	\
	tcl_dummy.c		\
	tcl_add_node.c	\
	tcl_add_tag.c		\
	tcl_clean_datafile.c		\
	tcl_close.c		\
	tcl_commands.c	\
	tcl_compress_datafile.c		\
	tcl_create_pulse.c	\
	tcl_decompile.c	\
	tcl_delete_node.c	\
	tcl_delete_pulse.c	\
	tcl_directory.c	\
	tcl_directory_tag.c	\
	tcl_dispatch.c		\
	tcl_do_method.c	\
	tcl_do_node.c	\
	tcl_edit.c		\
	tcl_put_expression.c		\
	tcl_remove_tag.c	\
	tcl_rename.c		\
	tcl_set_callbacks.c	\
	tcl_set_current.c	\
	tcl_set_default.c	\
	tcl_set_node.c	\
	tcl_set_tree.c	\
	tcl_setevent.c \
	tcl_show_current.c	\
	tcl_show_data.c	\
	tcl_show_db.c	\
	tcl_verify_tree.c	\
	tcl_wfevent.c \
	tcl_write.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = tcl_commands.export

all:	@MAKEBINDIR@mdstcl @MAKELIBDIR@libtcl_commands@SHARETYPE@

depend: 
	 @makedepend -- $(CFLAGS) -- $(SOURCES) 

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) tcl_commands.c
	@ $(RM) @MAKEBINDIR@mdstcl
	@ $(RM) @MAKELIBDIR@libtcl_commands@SHARETYPE@

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKELIBDIR@libtcl_commands@SHARETYPE@ @libdir@
	$(INSTALL) -m 755  @MAKEBINDIR@mdstcl @bindir@

@MAKEBINDIR@mdstcl:	tcl
	cp  tcl $@
	chmod +x $@

tcl_commands.c:	tcl_commands.ocld
	env @LIBPATH@=@MAKELIBDIR@ @MAKEBINDIR@cdu < tcl_commands.ocld
	$(MAKE) depend

@MAKELIBDIR@libtcl_commands@SHARETYPE@:	$(OBJECTS)
	$(LD)  -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ -lMdsdcl -lMdsServerShr -lMdsShr -lTreeShr -lTdiShr $(LIBS)
