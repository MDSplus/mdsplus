SHELL=/bin/sh
CC=@CC@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@ @SYBASE_INC@ @IDL_INC@ 
LDFLAGS=@LDFLAGS@ @IDL_LIB@
LIBS= -lMdsSql @SYBASE_LIB@ @LIBS@ @DNET_STUB@ @LIBSOCKET@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = \
idlsql_syb.c \
user_syb.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = IdlSql.export

all : @MAKELIBDIR@ @MAKELIBDIR@libIdlSql@SHARETYPEMOD@ @MAKELIBDIR@libIdlSql.a  @MAKEBINDIR@ @MAKEBINDIR@logbook

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libIdlSql@SHARETYPEMOD@
	@ $(RM) @MAKELIBDIR@libIdlSql.a
	@ $(RM) @MAKEBINDIR@logbook


depend:
	 @makedepend -- $(CFLAGS) -- $(SOURCES)

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 644  @MAKELIBDIR@libIdlSql.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libIdlSql@SHARETYPEMOD@ @libdir@
	$(INSTALL) -m 755  @MAKEBINDIR@logbook @bindir@

@MAKELIBDIR@libIdlSql@SHARETYPEMOD@ : $(OBJECTS) 
	$(LD) -o $@ @LINKMODULE@ $(OBJECTS) -L@MAKELIBDIR@ $(LDFLAGS) $(LIBS)

@MAKELIBDIR@libIdlSql.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKEBINDIR@ :
	mkdir @MAKEBINDIR@

@MAKEBINDIR@logbook:     logbook
	cp logbook $@
	chmod +x $@
